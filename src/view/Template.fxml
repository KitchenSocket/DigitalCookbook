<GridPane fx:id="rootBP" alignment="CENTER" minHeight="500" minWidth="800" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TemplateController">
    <columnConstraints>
        <ColumnConstraints fx:id="naviCol" prefWidth="80" />
        <ColumnConstraints fx:id="contentCol" hgrow="ALWAYS" prefWidth="1120" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fx:id="contentRow" percentHeight="100" />
    </rowConstraints>
        <AnchorPane fx:id="naviAP" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <TilePane fx:id="topBtnTP" orientation="VERTICAL" prefColumns="1" prefRows="2" prefTileWidth="80" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <Button fx:id="mainPageBtn" prefHeight="80" prefWidth="80" />
                <Button fx:id="favBtn" prefHeight="80" prefWidth="80" />
            </TilePane>

            <TilePane fx:id="bottomBtnTP" prefColumns="1" prefRows="1" prefTileWidth="80" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                <Button fx:id="addRecipeBtn" prefHeight="80" prefWidth="80" style="-fx-background-color: ;" />
            </TilePane>
      <ProgressIndicator fx:id="bar" layoutY="167.0" prefHeight="70.0" prefWidth="80.0" progress="0.0" />
        </AnchorPane>
   <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     <Label alignment="CENTER" prefHeight="200.0" prefWidth="800.0" text="Welcome to your digital cookbook">
                        <font>
                           <Font name="Arial" size="47.0" />
                        </font>
                     </Label>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     <Label alignment="CENTER" prefHeight="200.0" prefWidth="800.0" text="From here to create your gourmet ">
                        <font>
                           <Font name="Arial" size="35.0" />
                        </font>
                     </Label>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     <Label alignment="CENTER" prefHeight="200.0" prefWidth="800.0" text="Click me to start">
                        <font>
                           <Font name="Arial" size="35.0" />
                        </font>
                     </Label>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                  <children>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     <Button fx:id="startBtn" mnemonicParsing="false" prefHeight="100.0" prefWidth="400.0" text="Start" HBox.hgrow="ALWAYS">
                        <font>
                           <Font size="34.0" />
                        </font>
                     </Button>
                     <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
   </VBox>
</GridPane>
