<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FavouriteViewController">
   <left>
      <AnchorPane prefHeight="528.0" prefWidth="368.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchbar" layoutX="25.0" layoutY="29.0" prefHeight="31.0" prefWidth="278.0" />
            <Button fx:id="searchBtn" layoutX="305.0" layoutY="29.0" mnemonicParsing="false" onAction="#search" prefHeight="31.0" prefWidth="36.0" />
            <AnchorPane layoutX="25.0" layoutY="128.0" prefHeight="348.0" prefWidth="200.0">
               <children>
                  <ListView fx:id="matchRecipeList" layoutY="21.0" prefHeight="380.0" prefWidth="316.0" AnchorPane.bottomAnchor="20.0" />
               </children>
            </AnchorPane>
            <RadioButton fx:id="recipeNameRadioBtn" layoutX="25.0" layoutY="70.0" mnemonicParsing="false" text="recipe name">
               <padding>
                  <Insets top="2.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="ingredientNameRadioBtn" layoutX="25.0" layoutY="91.0" mnemonicParsing="false" text="ingredient name">
               <padding>
                  <Insets top="7.0" />
               </padding>
            </RadioButton>
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="recipeName" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="10.0" layoutX="44.0" layoutY="29.0" text="Title">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="44.0" layoutY="59.0" prefHeight="20.0" prefWidth="80.0" text="Serving">
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </Label>
            <Label layoutX="280.0" layoutY="62.0" text="time" />
            <Label layoutX="280.0" layoutY="97.0" text="type" />
            <Button fx:id="editRecipeBtn" layoutX="230.0" layoutY="14.0" mnemonicParsing="false" onAction="#editRecipe" text="edit" />
            <Button fx:id="addFavBtn" layoutX="310.0" layoutY="14.0" mnemonicParsing="false" onAction="#addFavRecipe" text="fav" />
            <AnchorPane layoutX="44.0" layoutY="126.0" prefHeight="402.0" prefWidth="338.0">
               <children>
                  <TextArea fx:id="ingredientList" layoutX="7.0" layoutY="14.0" prefHeight="79.0" prefWidth="305.0" text="ingredients" />
                  <ListView fx:id="stepList" layoutX="8.0" layoutY="104.0" prefHeight="278.0" prefWidth="304.0" />
               </children>
               <padding>
                  <Insets bottom="20.0" right="20.0" />
               </padding>
            </AnchorPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
