<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="inter.RecipeOperation">
    <select id="selectRecipeByID" parameterType="int" resultType="Recipe">
        select * from `recipe` where id = #{id}
    </select>
    
    <select id="selectRecipeByIDInFavourite" parameterType="int" resultType="Recipe">
        select * from `recipe` where id = #{id} and isFavourite = 1
    </select>
    
    <!-- 为了返回list 类型而定义的returnMap -->
    <resultMap type="Recipe" id="resultRecipeList">
        <id column="id" property="id" />
        <result column="name" property="name" />       
        <result column="briefDescription" property="briefDescription" />
        <result column="thumbnail" property="thumbnail" />
        <result column="servingNum" property="servingNum" />
        <result column="preparationTime" property="preparationTime" />
        <result column="cookingTime" property="cookingTime" />
        <result column="description" property="description" />
        <result column="isFavourite" property="isFavourite" />
        <result column="createdAt" property="createdAt" />
        <result column="updatedAt" property="updatedAt" />
        <result column="deletedAt" property="deletedAt" />
    </resultMap>
    
    <!-- 返回list 的select 语句，注意 resultMap 的值是指向前面定义好的 -->
    <select id="selectRecipes" parameterType="string" resultMap="resultRecipeList">
        
        select * from recipe where name like #{pattern,jdbcType=VARCHAR}
    </select>
    
    <select id="selectRecipesInFavourite" parameterType="string" resultMap="resultRecipeList">
        select * from recipe where name like #{name} and isFavourite = 1
    </select>

    <insert id="addRecipe" parameterType="Recipe" useGeneratedKeys="true" keyProperty="id"> 
        insert into recipe(name,briefDescription,thumbnail,servingNum,preparationTime,cookingTime,description,isFavourite)  
             values(#{name},#{briefDescription},#{thumbnail},#{servingNum},#{preparationTime},#{cookingTime},#{description},#{isFavourite})  
    </insert>
    
    <update id="updateRecipe" parameterType="Recipe" >
        update recipe set name=#{name},briefDescription=#{briefDescription},thumbnail=#{thumbnail},
        					 servingNum=#{servingNum},preparationTime=#{preparationTime},
        					 cookingTime=#{cookingTime},description=#{description},
        					 isFavourite=#{isFavourite} where id=#{id}
    </update>
    
    <update id="addFavorite" parameterType="int" >
        update recipe set isFavourite="1" where id=#{id}
    </update>
    
    <update id="removeFavorite" parameterType="int" >
        update recipe set isFavourite="0" where id=#{id}
    </update>
    
    <delete id="deleteRecipe" parameterType="int">
        delete from recipe where id=#{id}
    </delete>
    
</mapper>