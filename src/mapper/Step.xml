<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="inter.StepOperation">

	<!-- select step by id -->
    <select id="selectStepByID" parameterType="int" resultType="Step">
        select * from step where id = #{id}
    </select>
    
    <select id="selectStepByRecipeIdAndOrder" parameterType="map" resultType="Step">
		select * from step where recipeId = #{recipeId} AND stepOrder = #{stepOrder}
	</select>
    
    <!-- define a map to formalize the return value -->
    <resultMap type="Step" id="resultStepList">
        <id column="recipeId" property="recipeId" />
        <result column="stepOrder" property="stepOrder" />       
        <result column="description" property="description" />
        <result column="pic" property="pic" />
    </resultMap>

    <!-- select a result map by step description, using map defined before -->
    <select id="selectStepsByDescription" parameterType="string" resultMap="resultStepList">
        select * from step where description like #{description}
    </select>
    
    <!-- get all the steps of a recipe by recipe id -->
    <select id="selectStepsByRecipeId" parameterType="int" resultMap="resultStepList">
        select * from step where recipeId = #{id}
    </select>
	
	<!-- add step -->
    <insert id="addStep" parameterType="Step" useGeneratedKeys="false"> 
        insert into step(recipeId,stepOrder,description,pic)  
             values(#{recipeId},#{stepOrder},#{description},#{pic})  
    </insert>
    
    <!-- update step -->
    <update id="updateStep" parameterType="Step" >
        update step set recipeId=#{recipeId},stepOrder=#{stepOrder},
        	description=#{description},pic=#{pic} where id=#{id}
    </update>
    
    <!-- delete step -->
    <delete id="deleteStep" parameterType="int">
        delete from step where id=#{id}
    </delete>
    
    <!-- delete all the steps from a recipe by recipe id -->
    <delete id="deleteStepListByRecipeId" parameterType="int">
        delete from step where recipeId=#{recipeId}
    </delete>
        
</mapper>